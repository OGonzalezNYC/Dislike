<h1>Enter Statements</h1>

<%= form_for @statement do |f| %>
<%= f.label "What I Dislike About you?" %>
<%= f.text_area :content %>
<%= f.label "True?" %>
<%= f.check_box :answer %>
<%= f.label "Player" %>
<%= f.collection_select :player_id, Player.all, :id, :name %>
<%= f.hidden_field :round_id, :value => Round.all.last.id %>

<%= f.submit %>
<% end %>

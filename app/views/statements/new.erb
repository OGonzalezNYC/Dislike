<h1>Enter Statements</h1>
<!-- @these_statements = [] -->
<% if flash[:error] %>
  <% flash[:error].each do |error| %>
    <%= error %>
  <% end %>
<% end %>

<%= form_for @statement do |f| %>
  <%= f.label "What I Dislike About you?" %><br>
  <%= f.text_area :content %><br>
  <%= f.label "Check Box if true" %>
  <%= f.check_box :answer %><br>
  <%= f.label "Submitting Player:" %>
  <%= f.collection_select :player_id, Player.all, :id, :name %>
  
  <%= f.submit "Submit statements" %>
<% end %>
